<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <ImageView
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/lt7_2"/>

    <ImageButton
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@drawable/ic_help"
        android:backgroundTint="#00FFFF"
        android:id="@+id/ivHelpLukis"
        android:layout_marginTop="110dp"
        android:layout_marginStart="29dp"/>

    <ImageButton
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@drawable/ic_in_door"
        android:backgroundTint="#00FF00"
        android:id="@+id/ivLukis"
        android:layout_marginTop="160dp"
        android:layout_marginStart="480dp"/>

    <ImageButton
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@drawable/ic_move"
        android:backgroundTint="#00FF00"
        android:id="@+id/ivMoveForward"
        android:layout_marginTop="155dp"
        android:layout_marginStart="-10dp"/>

    <ImageButton
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@drawable/ic_move"
        android:backgroundTint="#00FF00"
        android:id="@+id/ivMoveBackward"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="215dp" />
</RelativeLayout>
