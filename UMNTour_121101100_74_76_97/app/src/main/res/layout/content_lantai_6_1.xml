<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".lantai6.Lantai_6_1"
    tools:showIn="@layout/activity_lantai_6_1"
    android:background="#000000">

    <ImageView
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/lt6_1"/>

    <ImageButton android:id="@+id/ivStairDown"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/ic_stair_right"
        android:backgroundTint="#FF0000"
        android:layout_marginTop="251dp"
        android:layout_marginStart="98dp" />

    <ImageButton android:id="@+id/ivStairUp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/ic_stair_left"
        android:backgroundTint="#00FF00"
        android:layout_marginTop="72dp"
        android:layout_marginStart="78dp" />

    <ImageButton android:id="@+id/ivMoveForward"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@drawable/ic_move"
        android:backgroundTint="#00FF00"
        android:layout_marginTop="80dp"
        android:layout_marginStart="220dp" />

    <ImageButton android:id="@+id/ivMoveBackward"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@drawable/ic_move"
        android:backgroundTint="#00FF00"
        android:layout_marginStart="84dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/ivMoveForward" />

    <ImageButton android:id="@+id/ivMoveToilet"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@drawable/ic_move"
        android:backgroundTint="#00FF00"
        android:layout_marginStart="375dp"
        android:layout_marginTop="83dp" />

</RelativeLayout>
