<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">


    <ImageView
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/lt7_3"/>

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/ivMoveElevator"
        android:background="@drawable/ic_move"
        android:backgroundTint="#00FF00"
        android:layout_marginTop="90dp"
        android:layout_marginStart="180dp"/>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/ivMoveForward"
        android:background="@drawable/ic_move"
        android:backgroundTint="#00FF00"
        android:layout_marginTop="85dp"
        android:layout_marginStart="120dp"/>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/ivInLabKomp"
        android:background="@drawable/ic_in_door"
        android:backgroundTint="#00FF00"
        android:layout_marginTop="190dp"
        android:layout_marginStart="500dp"/>

    <ImageButton
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/ivInLabMac"
        android:background="@drawable/ic_in_door"
        android:backgroundTint="#00FF00"
        android:layout_marginTop="145dp"
        android:layout_marginStart="10dp"/>

    <ImageButton
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/ic_help"
        android:backgroundTint="#00FFFF"
        android:id="@+id/ivHelp"
        android:layout_marginTop="110dp"
        android:layout_marginStart="270dp"/>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/ivMoveBackward"
        android:background="@drawable/ic_move"
        android:backgroundTint="#00FF00"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="225dp" />
</RelativeLayout>
