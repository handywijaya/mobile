<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".lantai8.Lantai_8_1"
    tools:showIn="@layout/activity_lantai_8_1"
    android:background="#000000">

    <ImageView android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/lt8_1"/>

    <ImageButton android:id="@+id/ivStairDown"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/ic_stair_right"
        android:backgroundTint="#FFFF00"
        android:layout_marginStart="80dp"
        android:layout_marginTop="250dp" />

    <ImageButton android:id="@+id/ivMoveForward"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@drawable/ic_move"
        android:backgroundTint="#00FF00"
        android:layout_marginStart="5dp"
        android:layout_marginTop="82dp" />

    <ImageButton android:id="@+id/ivMoveBackward"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@drawable/ic_move"
        android:backgroundTint="#00FF00"
        android:layout_marginStart="350dp"
        android:layout_marginTop="285dp" />

    <ImageButton android:id="@+id/ivMoveToilet"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@drawable/ic_help"
        android:backgroundTint="#00FFFF"
        android:layout_marginStart="320dp"
        android:layout_marginTop="90dp"/>

</RelativeLayout>